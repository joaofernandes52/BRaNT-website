<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css"
        integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css">
    <link rel="stylesheet" type="text/css" href="/stylesheets/style.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <title>BRaNT</title>
    <link rel="icon" href="https://www.arditi.pt/images/Logos/BRaNT.png">
</head>

<%- include ("partials/header") %>

    <img src="https://wallpaper.dog/large/20542088.jpg" class="img-fluid image_cover">
    <div class="container marketing mt-5">
        <a href="/publications/<%=publication._id%>"><i class="bi bi-caret-left-fill" id="return_icon"></i></a>
        <br><br>
        <label class="text_color_claret">Edit Publication</label>
        <form action="/edit_publication/<%=publication._id%>?_method=PUT" method="post">
            <label for="exampleFormControlSelect1">Tittle</label>
            <input type="text" class="form-control mb-4" id="tittle" name="tittle" value="<%=publication.tittle%>"
                placeholder="Enter tittle">
            <label for="exampleFormControlSelect1">Authors</label>
            <input type="text" class="form-control mb-4" id="authors" name="authors" value="<%=publication.authors%>"
                placeholder="Enter authors">
            <div class="row mb-4">
                <div class="col">
                    <label for="exampleFormControlSelect1">Date</label>
                    <input type="date" class="form-control" id="date" name="date" value="<%=publication.date%>"
                        placeholder="Enter date">
                </div>
                <div class="col">
                    <label for="exampleFormControlSelect1">Type</label>
                    <select class="form-control" id="type" name="type">
                        <option value="">Type</option>
                        <option value="Conference">Conference</option>
                        <option value="Jornal">Jornal</option>
                        <option value="Book">Book</option>
                        <option selected value="Book Chapter">Book Chapter</option>
                    </select>
                </div>
            </div>
            <label for="exampleFormControlSelect1">URL</label>
            <input type="text" class="form-control mb-5" id="url" name="url" value="<%=publication.url%>"
                placeholder="Enter url">
            <div class="form-group">
                <label for="exampleFormControlTextarea1">Abstract</label>
                <textarea class="form-control mb-5" id="abstract" name="abstract"
                    rows="10"><%=publication.abstract%></textarea>
            </div>
            <button type="submit" class="btn btn-success">Submit</button>
        </form>
        <br>
    </div>
    <input type="hidden" value="<%=publication.type%>" id="type_pub">
    <script>
        const type = document.getElementById("type_pub").value;
        const select = document.getElementById("type");
        select.value = type;
    </script>

    <%- include ("partials/footer") %>