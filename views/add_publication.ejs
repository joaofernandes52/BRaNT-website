<%- include ("partials/header") %>

    <img src="https://wallpaper.dog/large/20542088.jpg" class="img-fluid image_cover">
    <div class="container marketing mt-5">
        <a href="/publications"><i class="bi bi-caret-left-fill" id="return_icon"></i></a>
        <br><br>
        <label class="text_color_claret">Add Publication</label>
        <form action="/add_publication" method="post">
            <label for="exampleFormControlSelect1">Tittle</label>
            <input type="text" class="form-control mb-3" id="tittle" name="tittle" value="" placeholder="Enter tittle">
            <label for="exampleFormControlSelect1">Authors</label>
            <input type="text" class="form-control mb-3" id="authors" name="authors" value=""
                placeholder="Enter authors">
            <div class="row mb-2">
                <div class="col">
                    <label for="exampleFormControlSelect1">Date</label>
                    <input type="date" class="form-control" id="date" name="date" value="" placeholder="Enter date">
                </div>
                <div class="col">
                    <div class="form-group">
                        <label for="exampleFormControlSelect1">Type</label>
                        <select class="form-control" id="type" name="type" value="">
                            <option value="">Type</option>
                            <option value="Conference">Conference</option>
                            <option value="Jornal">Jornal</option>
                            <option value="Book">Book</option>
                            <option value="Book Chapter">Book Chapter</option>
                        </select>
                    </div>
                </div>
            </div>
            <label for="exampleFormControlSelect1">URL</label>
            <input type="text" class="form-control mb-3" id="url" name="url" value="" placeholder="Enter url">
            <div class="form-group">
                <label for="exampleFormControlTextarea1">Abstract</label>
                <textarea class="form-control mb-5" id="abstract" name="abstract" rows="10" value=""></textarea>
            </div>
            <button type="submit" class="btn btn-success">Submit</button>
        </form>
        <br>
    </div>
